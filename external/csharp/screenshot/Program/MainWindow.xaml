<?xml version="1.0"?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:ScreenCaptureDemo" x:Class="ScreenshotDemo.MainWindow" mc:Ignorable="d" Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Button Content="Take Screenshot" HorizontalAlignment="Left" VerticalAlignment="Top" Click="CaptureRegion_OnClick" Margin="3"/>
    <Canvas PreviewMouseDown="canvas_PreviewMouseDown" PreviewMouseUp="canvas_PreviewMouseUp" x:Name="canvas" Width="640" Height="480" Background="#FFF9FDD2" Canvas.Left="0" Canvas.Top="0" Grid.Row="1"/>
  </Grid>
</Window>
