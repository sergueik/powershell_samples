<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <appSettings>
    <add key="sourcefilename" value="example.txt" />
    <add key="outputfilename" value="output.txt" />
    <!-- ascii|ebcdic-->
    <!--  Note: `convertTo` attribute name is controversial, it means actually `inputType` -->
    <add key="convertto" value="ebcdic" />
    <!-- ebcdic codepage-->
    <add key="codepage" value="IBM037" />
    <!-- for linebreak after n bytes. -->
    <!--  Note: has to te true -->
    <add key="crlf" value="true" />
    <add key="skipbytesforcrlf" value="3000" />
  </appSettings>
</configuration>