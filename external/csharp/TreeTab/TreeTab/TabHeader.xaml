<UserControl x:Class="TreeTab.TabHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Margin="0,0,0,0">
    <StackPanel x:Name="xTabHeader" Orientation="Horizontal">
        <Label x:Name="lblHeader" FontWeight="Bold" FontSize="10">Header Name</Label>
        <Button x:Name="xClose"  Content=" X " Height="19" Width="19" Margin="15,0,5,0" Click="xClose_Click" BorderBrush="Beige" BorderThickness="1" FontSize="8" />
    </StackPanel>
</UserControl>
