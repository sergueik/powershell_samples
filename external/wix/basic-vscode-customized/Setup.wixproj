<?xml version="1.0"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" DefaultTargets="Build" ToolsVersion="4.0">
  <PropertyGroup>
	  <!-- NOTE: 32 and 64 bit version of WIX existed. 
	  -->
	  <!-- NOTE: trailng slash in WixToolPath -->
    <WixToolPath>C:\Program Files\WiX Toolset v3.11\bin\</WixToolPath>
    <OutputName>MyVSCodeInstaller</OutputName>
    <OutputType>Package</OutputType>
  </PropertyGroup>
  <ItemGroup>
    <WixSource Include="Product.wxs"/>
  </ItemGroup>
  <Target Name="Compile">
    <MakeDir Directories="obj"/>
    <!--
    <Exec Command="&quot;$(WixToolPath)candle.exe&quot; -nologo -out obj\ @(WixSource-&gt;'%(Filename).wxs', ' ') @(WixSource)"/>
    --> 
    <Exec Command="&quot;$(WixToolPath)candle.exe&quot; -nologo -out obj\ @(WixSource)"/>
  </Target>
  <Target Name="Link" DependsOnTargets="Compile">
    <MakeDir Directories="bin"/>
    <Exec Command="&quot;$(WixToolPath)light.exe&quot; -nologo -ext WixUIExtension -out bin\$(OutputName).msi obj\*.wixobj"/>
  </Target>
  <Target Name="Build" DependsOnTargets="Compile;Link"/>
</Project>
